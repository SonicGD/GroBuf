<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <Configuration>Release</Configuration>
  </PropertyGroup>

  <Target Name="Publish">
    <MakeDir Directories="Output" />
    <MSBuild Projects="GroBuf\GroBuf.sln" Targets="Rebuild" Properties="Configuration=$(Configuration)" />
    <Exec Command="Assemblies\ILMerge.exe /v4 /internalize /out:Output\GroBuf.dll Assemblies\GroBuf.dll Assemblies\GrEmit.dll Assemblies\Mono.Reflection.dll" />
  </Target>
  
</Project>